<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <h1>Minha Fila de Banco</h1>
    </header>
    <div class="container">
        


        <form class="form">
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" class="form-control" placeholder="Nome do cliente" />
            <label for="idade">Idade:</label>
            <input type="number" id="idade" name="idade" class="form-control" placeholder="Idade do cliente" />
        </form>

        <div class="button-container">
            <div class="button-row">
                <button type="button" class="btn btn-adicionar" onclick="adicionarCliente()">Adicionar Cliente</button>
                <button class="btn btn-remover" onclick="removerCliente()">Remover Cliente</button>
            </div>
            <div class="button-row">
                <button class="btn btn-consultar-fila" onclick="consultarFila()">Consultar Fila</button>
                <button class="btn btn-consultar-todos" onclick="consultarClientesAtendidos()">Consultar Clientes Atendidos</button>
            </div>
        </div>

        <div id="resultado" class="result"></div>
        <footer>
            <p>&copy; 2024 - Desenvolvido por Fábio Roberto.</p>
        </footer>
    </div>

    <script src="~/js/site.js"></script>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>